<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.himankyadav.forgetmiknot.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/SignInButton"
        android:onClick="loginButtonClick"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/userIDText"
        android:layout_alignLeft="@+id/userIDText"
        android:layout_alignStart="@+id/userIDText"
        android:layout_alignRight="@+id/userIDText"
        android:layout_alignEnd="@+id/userIDText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign UP"
        android:id="@+id/button"
        android:onClick="signupButtonClick"
        android:layout_alignTop="@+id/SignInButton"
        android:layout_marginTop="78dp"
        android:layout_alignRight="@+id/SignInButton"
        android:layout_alignEnd="@+id/SignInButton"
        android:layout_alignLeft="@+id/SignInButton"
        android:layout_alignStart="@+id/SignInButton" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/userIDText"
        android:layout_marginTop="52dp"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:hint="UserID"
        android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:gravity="center"
        android:layout_below="@+id/userIDText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:hint="Password"/>


</RelativeLayout>
