<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/AddItemImage"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ccf09f"
            android:clickable="true"
            android:onClick="captureItemImage"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Enter Item Name"
            android:id="@+id/AddItemItemName"
            android:layout_below="@+id/AddItemImage"
            android:layout_centerHorizontal="true"
            android:background="#51cdfe"
            android:textColor="#ffffff"
            android:clickable="false"></EditText>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="Enter Item Date and Time"
            android:gravity="center"
            android:id="@+id/AddItemDateTime"
            android:layout_below="@+id/AddItemItemName"
            android:layout_marginTop="33dp"
            android:background="#daf6f2" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="Enter Item Description"
            android:gravity="center"
            android:id="@+id/AddItemDescription"
            android:layout_below="@+id/AddItemDateTime"
            android:layout_marginTop="33dp"
            android:background="#daf6f2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="ADD Item"
            android:layout_marginTop="33dp"
            android:id="@+id/AddItemButton"
            android:layout_below="@id/AddItemDescription"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="addItemClick"
            android:gravity="center"
            android:background="@color/accent_material_light"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:clickable="true" />


    </RelativeLayout>
</ScrollView>
